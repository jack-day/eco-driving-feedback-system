{
    "compilerOptions": {
      "target": "es2021",
      "module": "ES2020",
      "strictNullChecks": true,
      "strict": true,
      "noImplicitAny": true,
      "allowJs": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "typeRoots": ["./src/@types", "./node_modules/@types"]
    },
    "include": [
      "./src/**/*",
      "./tests/**/*",
    ],
}